<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#90472C"
            android:orientation="vertical" >

        </LinearLayout>

        <ListView
            android:layout_marginTop="55dp"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >
    </LinearLayout>

    <SlidingDrawer
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/slidingDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:content="@+id/content"
        android:gravity="bottom"
        android:handle="@+id/handle"
        android:orientation="vertical"
        >

        <FrameLayout
            android:id="@+id/handle"
            android:layout_width="match_parent"
            android:layout_height="80dp" >

             <FrameLayout
                 android:layout_width="match_parent"
                 android:layout_height="10dp"
                 android:layout_gravity="bottom"
                 android:background="#90472C" />

             <FrameLayout
                 android:layout_width="80dp"
                 android:layout_height="69dp"
                 android:layout_gravity="center"
                 android:layout_marginTop="10dp"
                 ma=""
                 android:background="#90472C" >

                 <ImageView
                     android:id="@+id/imageView2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:src="@drawable/ic_lobby_host_core" />

                 <ImageView
                     android:id="@+id/ic_lobby_host_static_pulse"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:src="@drawable/ic_lobby_host_static_pulse" />

                 <ImageView
                     android:id="@+id/ic_lobby_host_pulse"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:src="@drawable/ic_lobby_host_pulse"
                     android:visibility="invisible" />
             </FrameLayout>
            
        </FrameLayout>

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="560dp"
            android:alpha="0.95"
             android:background="#2b2b2b" >

         <include layout="@layout/host_game_drawer"/>

        </FrameLayout>
    </SlidingDrawer>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="125dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="#90472C"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="#155F40"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</FrameLayout>