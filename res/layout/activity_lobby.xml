<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2b2b" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <View
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="#25ffffff" />

    <TextView
        android:id="@+id/lounge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:text="@string/lounge"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/sectionlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="53dp"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="top"
        android:layout_marginTop="80dp"
        android:background="#2b2b2b" >

        <ImageView
            android:id="@+id/ic_tab_lobby"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:onClick="onNavigationClicked"
            android:src="@drawable/ic_tab_lobby" />

        <ImageView
            android:id="@+id/ic_tab_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:onClick="onNavigationClicked"
            android:src="@drawable/ic_tab_chat" />

        <ImageView
            android:id="@+id/ic_tab_stat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:onClick="onNavigationClicked"
            android:src="@drawable/ic_tab_stat" />

        <ImageView
            android:id="@+id/ic_tab_about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:onClick="onNavigationClicked"
            android:src="@drawable/ic_tab_about" />
    </LinearLayout>

</FrameLayout>