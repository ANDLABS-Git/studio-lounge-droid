<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="#2b2b2b"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:background="@android:color/white"
        android:orientation="vertical" >
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp"
        android:text="@string/lounge"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#2b2b2b" >

            <ImageView
                android:id="@+id/ic_tab_lobby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_tab_lobby" />

            <ImageView
                android:id="@+id/ic_tab_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_tab_chat" />

            <ImageView
                android:id="@+id/ic_tab_stat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_tab_stat" />

            <ImageView
                android:id="@+id/ic_tab_about"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_tab_about" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:alpha="0.1"
        android:background="@android:color/white"
        android:orientation="vertical" >
    </LinearLayout>
    
</FrameLayout>